(defcfg
  ;; For Linux
  input  (device-file "/dev/input/by-path/platform-i8042-serio-0-event-kbd")
  output (uinput-sink "My KMonad output"
    ;; To understand the importance of the following line, see the section on
    ;; Compose-key sequences at the near-bottom of this file.
    "/run/current-system/sw/bin/sleep 1 && /run/current-system/sw/bin/setxkbmap -option compose:ralt")
  cmp-seq ralt    ;; Set the compose key to `RightAlt'
  cmp-seq-delay 5 ;; 5ms delay between each compose-key sequence press

  ;; For Windows
  ;; input  (low-level-hook)
  ;; output (send-event-sink)

  ;; For MacOS
  ;; input  (iokit-name "my-keyboard-product-string")
  ;; output (kext)

  ;; Comment this if you want unhandled events not to be emitted
  fallthrough true

  ;; Set this to false to disable any command-execution in KMonad
  allow-cmd false

  ;; Set the implicit around to `around`
  implicit-around around
)

(defsrc
  esc  mute vold volu prev pp next bldn blup   slck  rfkill prnt f12  del
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  tab  q    w    e    r    t    y    u    i    o    p    [    ]    \
  caps a    s    d    f    g    h    j    k    l    ;    '    ret
  lsft z    x    c    v    b    n    m    ,    .    /         rsft
  lctl fn   lmet lalt         spc         ralt rctl lft up rght
                                                        down
)

(defalias
  rt (tap-next-release r (layer-toggle symbols))
  st (tap-next-release s lalt)
  tt (tap-next-release t lmet)

  nt (tap-next-release n lmet)
  et (tap-next-release e lalt)
  it (tap-next-release i (layer-toggle symbols))

  spct (tap-next-release spc lsft)
  esct (tap-next-release esc lctl)
  tabt (tap-next-release tab rctl)
)

(deflayer base
  esc  mute vold volu prev pp next bldn blup lmet rfkill prnt f12  del
  grv  1    2    3    4    5    6    7    8    9    0    -    =    bspc
  del  q    w    f    p    b    j    l    u    y    ;    \    ]    \
  bspc a    @rt  @st  @tt  g    m    @nt  @et  @it    o    '    ret
  =    z    x    c    d    v    k    h    ,    .    /         -
  lctl fn   lmet @esct       @spct        @tabt rctl lft up rght
                                                        down
)

(deflayer symbols
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    _    _    _    _    _    _    _    _    _    _    _
  _    _    _    _    lbrc rbrc _    _    _    _    _    _    _
  _    _    _    _    lft  rght up   down _    _    _         _
  _    _    _    _            _           _    _    _    _    _
                                                         _
)
